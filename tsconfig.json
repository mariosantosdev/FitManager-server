{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@source/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@view/*": ["./src/view/*"]
    }
  },
  "exclude": ["./commitlint.config.js"]
}
